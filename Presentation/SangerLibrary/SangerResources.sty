\newfontfamily{\Wellcome}{WELLCOME-BOLD.TTF}[Path = SangerLibrary/Fonts/]
\newfontfamily\Helvetica[
    Path=SangerLibrary/Fonts/,
    Extension=.otf,
    UprightFont=*-Lt,
    BoldFont=*-Bd,
    ItalicFont=*-It,
    BoldItalicFont=*-BdIt
]{HelveticaNeue}
\setmainfont[
    Path=SangerLibrary/Fonts/,
    Extension=.otf,
    UprightFont=*-Lt,
    BoldFont=*-Bd,
    ItalicFont=*-It,
    BoldItalicFont=*-BdIt
]{HelveticaNeue}

