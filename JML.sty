\newcommand\inner[2]
{
	\left\langle #1, #2 \right\rangle
}


\newcommand\fittedImage[1]
{
	\begin{center}
		\includegraphics[keepaspectratio=true, width=0.49\textwidth]{#1}
	\end{center}
}

\newcommand\fittedImageLarge[1]
{
	\begin{center}
		\includegraphics[keepaspectratio=true, width=\textwidth]{#1}
	\end{center}
}
\newcommand\normalFigure[3]
{
	\begin{figure}
	    \centering
		\fittedImage{#1}
	    \caption{#2}
	    \label{#3}
	\end{figure}
}
\newcommand\largeFigure[3]
{
	\begin{figure*}
	    \centering
		\fittedImageLarge{#1}
	    \caption{#2}
	    \label{#3}
	\end{figure*}
}

